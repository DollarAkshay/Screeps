{
    "env": {
        "screeps/screeps": true
    },
    "extends": "standard",
    "plugins": [
        "screeps"
    ],
    "globals": {
        "angular": false,
        "WebSocket": false,
        "d3": false
    },
    "rules": {
        "brace-style": [2, "stroustrup"],
        "indent": ["error", 4],
        "max-len": [2, {
            "code": 240,
            "ignoreUrls": true
        }],
        "no-invalid-this": 1,
        "no-var": 0,
        "no-undef": 1,
        "one-var": ["off", "always"],
        "semi": [1, "always"]
    }
}